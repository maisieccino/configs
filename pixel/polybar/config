[module/Battery]
type = internal/battery
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = (%H:%M)
format-discharging = <ramp-capacity> <label-discharging>
format-charging = <ramp-capacity> <label-charging>
label-charging = %time%
label-discharging = %time%
label-full = 
ramp-capacity-0 = !
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/Spotify]
type = custom/script
exec = ~/.config/polybar/scripts/spotify.sh
ellipsis = true
interval = 5
maxlen = 40
click-left = xdotool key super+z
click-right = xdotool key super+0
scroll-up = xdotool key super+0
scroll-down = xdotool key super+z
format-padding = 1

[module/Xwindow]
type = internal/xwindow
label-maxlen = 40

[module/music]
type = custom/script
exec = ~/scripts/nowplaying.sh
ellipsis = true
interval = 5
maxlen = 40
click-left = xdotool key super+p
click-right = xdotool key super+shift+period
scroll-up = xdotool key super+0
scroll-down = xdotool key super+z
format-padding = 1

[module/Player]
type = custom/script
exec = ~/.config/polybar/scripts/player.sh
ellipsis = true
interval = 5
maxlen = 40
click-left = xdotool key super+z
click-right = xdotool key super+0
scroll-up = xdotool key super+0
scroll-down = xdotool key super+z
format-padding = 1

[module/Wifi]
type = internal/network
interface = wlp1s0
interval = 3
format-connected = <ramp-signal> <label-connected>
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-5 = 
