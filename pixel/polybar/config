;format-muted-foreground = #4d000000
format-muted-padding = 1

[module/Search]
type = custom/script
exec = echo " "
click-left = ~/.config/polybar/scripts/search.sh
format-padding = 1

[module/Clock]
type = internal/date
date = %a, %d %b | %H:%M
interval = 5
format-padding = 2

[module/Shutdown]
type = custom/script
exec = echo "   "
click-left = ~/scripts/power
