bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ false && pactl set-sink-volume @DEFAULT_SINK@ +2%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $mod+p exec --no-startup-id playerctl play-pause
bindsym $mod+Shift+comma exec --no-startup-id playerctl previous
bindsym $mod+Shift+period exec --no-startup-id playerctl next

